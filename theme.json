{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": true,
      "defaultGradients": true,
      "defaultPalette": true,
      "duotone": [],
      "palette": [
        {
          "slug": "primary",
          "color": "#0073aa",
          "name": "Primární"
        },
        {
          "slug": "secondary",
          "color": "#00a0d2",
          "name": "Sekundární"
        },
        {
          "slug": "dark",
          "color": "#333333",
          "name": "Tmavá"
        },
        {
          "slug": "light",
          "color": "#f8f8f8",
          "name": "Světlá"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "Bílá"
        },
        {
          "slug": "accent",
          "color": "#e91e63",
          "name": "Zvýrazňující"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "name": "1",
          "slug": "10",
          "size": "0.5rem"
        },
        {
          "name": "2",
          "slug": "20",
          "size": "1rem"
        },
        {
          "name": "3",
          "slug": "30",
          "size": "1.5rem"
        },
        {
          "name": "4",
          "slug": "40",
          "size": "2rem"
        },
        {
          "name": "5",
          "slug": "50",
          "size": "2.5rem"
        },
        {
          "name": "6",
          "slug": "60",
          "size": "3rem"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "Systémové písmo",
          "slug": "system"
        },
        {
          "fontFamily": "'Helvetica Neue', Helvetica, Arial, sans-serif",
          "name": "Helvetica",
          "slug": "helvetica"
        },
        {
          "fontFamily": "Georgia, Times, 'Times New Roman', serif",
          "name": "Georgia",
          "slug": "georgia"
        },
        {
          "fontFamily": "Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        {
          "name": "Malé",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "name": "Základní",
          "size": "1rem",
          "slug": "normal"
        },
        {
          "name": "Střední",
          "size": "1.25rem",
          "slug": "medium"
        },
        {
          "name": "Velké",
          "size": "1.5rem",
          "slug": "large"
        },
        {
          "name": "Extra velké",
          "size": "2rem",
          "slug": "x-large"
        },
        {
          "name": "Obrovské",
          "size": "3rem",
          "slug": "xx-large"
        }
      ],
      "lineHeight": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--dark)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--40)",
            "bottom": "var(--wp--preset--spacing--30)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--40)",
            "bottom": "var(--wp--preset--spacing--20)"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.4"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--30)",
            "bottom": "var(--wp--preset--spacing--20)"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "1.5"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "1.5"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--30)",
      "padding": {
        "top": "var(--wp--preset--spacing--40)",
        "right": "var(--wp--preset--spacing--30)",
        "bottom": "var(--wp--preset--spacing--40)",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "4px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secondary)",
            "text": "var(--wp--preset--color--white)"
          }
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.3"
        }
      },
      "core/post-excerpt": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "1.6"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "bold",
          "lineHeight": "1.3"
        }
      },
      "core/site-tagline": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontStyle": "italic"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "core/quote": {
        "border": {
          "width": "0 0 0 4px",
          "style": "solid",
          "color": "var(--wp--preset--color--primary)"
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--30)"
          }
        },
        "typography": {
          "fontStyle": "italic"
        }
      },
      "core/code": {
        "border": {
          "radius": "4px",
          "width": "1px",
          "style": "solid",
          "color": "#e0e0e0"
        },
        "color": {
          "background": "#f5f5f5",
          "text": "#333333"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--20)",
            "right": "var(--wp--preset--spacing--20)",
            "bottom": "var(--wp--preset--spacing--20)",
            "left": "var(--wp--preset--spacing--20)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Hlavička",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Patička",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Postranní panel",
      "area": "sidebar"
    }
  ],
  "customTemplates": [
    {
      "name": "page-no-sidebar",
      "title": "Stránka bez postranního panelu",
      "postTypes": ["page"]
    },
    {
      "name": "page-full-width",
      "title": "Stránka na celou šířku",
      "postTypes": ["page"]
    },
    {
      "name": "single-no-sidebar",
      "title": "Příspěvek bez postranního panelu",
      "postTypes": ["post"]
    }
  ]
}